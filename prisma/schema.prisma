generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  username  String   @unique
  password  String
}

model Reseller {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  licenseDuration Int      @default(2) // 2 years
  resellerId      String   @unique

  //Optional
  name         String?
  email        String? @unique
  backerId     String? @unique
  pledgeAmount String?
  backerNumber Int?    @unique
}
